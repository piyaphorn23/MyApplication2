<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".F01Fragment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_all"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:layout_margin="15dp"
            android:text="ซีด/โลหิตจาง ร่วมกับมีไข้"
            android:textStyle="bold"
            android:textSize="28dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:text="       มีอาการโลหิตจาง พร้อมกับตัวร้อน อุณหภูมิของร่างกายสูงกว่า 37.2 องศาเซลเซียส โดยการวัดทางปาก"
            android:textSize="23dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            android:gravity="center"
            android:text="         จับไข้หนาวสั่นมาก? หรือตาเหลือง(ดีซ่าน)?"
            android:background="#EC7703"
            android:textSize="25dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/button1"
            android:layout_marginTop="50dp"
            android:text="ใช่"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/button2"
            android:text="ไม่ใช่"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/ImageButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/back_button"/>
    </LinearLayout>


</RelativeLayout><!-- From: file:/C:/Users/PIYAPHORN/OneDrive/Documents/MyApplication2/app/src/main/res/layout/fragment_f02.xml -->